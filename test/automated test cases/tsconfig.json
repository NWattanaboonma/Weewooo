{
  "compilerOptions": {
    // Set the module resolution strategy required by Cypress
    "moduleResolution": "node16",
    "module": "node16",
    "target": "es2019",
    "lib": ["es2019", "dom"],
    // Include Cypress-specific types
    "types": ["cypress", "node"],
    "isolatedModules": false
  },
  "include": ["**/*.ts", "**/*.tsx"]
}